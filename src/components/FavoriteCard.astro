---
import { Image } from "astro:assets";
const { title, description, price, addOn, image, alt } = Astro.props;
---

<div class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300">
  <div class="aspect-[4/3] overflow-hidden">
    <Image src={image} alt={alt} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" />
  </div>

  <div class="p-4 text-center">
    <h4 class="font-heading font-semibold text-coffee-900">
      {title}
    </h4>
  </div>
</div>
